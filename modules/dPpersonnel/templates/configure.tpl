	    <th class="category" colspan="10">{{tr}}{{$class}}{{/tr}}</th>
	  </tr>
  
    {{mb_include module=system template=inc_config_bool var=show_replacer}}
    
    <tr>
      <td class="button" colspan="2">
        <button class="modify" type="submit">{{tr}}Save{{/tr}}</button>
      </td>
    </tr>
		
  </table>
</form>